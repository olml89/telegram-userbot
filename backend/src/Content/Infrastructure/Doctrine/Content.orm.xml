<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="olml89\TelegramUserbot\Backend\Content\Domain\Content"
            table="contents">

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="publicId"
               column="public_id"
               type="uuid"
               unique="true"
               nullable="false"/>

        <field name="title"
               type="contentTitle"
               unique="true"
               nullable="false"/>

        <field name="description"
               type="contentDescription"
               nullable="false"/>

        <field name="intensity"
               type="percentage"
               nullable="false"/>

        <field name="price"
               type="contentPrice"
               nullable="false"/>

        <field name="sales"
               type="integer"
               nullable="false"/>

        <field name="language"
               type="string"
               enum-type="olml89\TelegramUserbot\Backend\Content\Domain\Language\Language"
               length="2"
               nullable="false"/>

        <field name="mode"
               type="string"
               enum-type="olml89\TelegramUserbot\Backend\Content\Domain\Mode\Mode"
               length="20"
               nullable="false"/>

        <field name="status"
               type="string"
               enum-type="olml89\TelegramUserbot\Backend\Content\Domain\Status\Status"
               length="20"
               nullable="false"/>

        <!-- Relationships -->
        <many-to-one field="category"
                     target-entity="olml89\TelegramUserbot\Backend\Category\Domain\Category"
                     inversed-by="contents"
                     cascade="persist"
                     fetch="LAZY">
            <join-column name="category_id"
                         referenced-column-name="id"
                         nullable="false"/>
        </many-to-one>

        <many-to-many field="tags"
                      target-entity="olml89\TelegramUserbot\Backend\Tag\Domain\Tag"
                      cascade="persist"
                      fetch="LAZY">
            <join-table name="content_tag">
                <join-columns>
                    <join-column name="content_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="tag_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <one-to-many field="files"
                     target-entity="olml89\TelegramUserbot\Backend\File\Domain\File"
                     mapped-by="content"
                     cascade="persist,remove"
                     orphan-removal="true"
                     fetch="LAZY"/>

    </entity>

</doctrine-mapping>
