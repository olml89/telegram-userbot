<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="olml89\TelegramUserbot\Backend\File\Domain\File"
            table="files"
            inheritance-type="JOINED">

        <!-- Mapping -->
        <discriminator-column name="type"
                              type="string"/>

        <discriminator-map>
            <discriminator-mapping value="file" class="olml89\TelegramUserbot\Backend\File\Domain\File"/>
            <discriminator-mapping value="image" class="olml89\TelegramUserbot\Backend\File\Domain\Image"/>
            <discriminator-mapping value="audio" class="olml89\TelegramUserbot\Backend\File\Domain\Audio"/>
            <discriminator-mapping value="video" class="olml89\TelegramUserbot\Backend\File\Domain\Video"/>
        </discriminator-map>

        <!-- Identity -->
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="publicId"
               column="public_id"
               type="uuid"
               unique="true"
               nullable="false"/>

        <!-- Fields -->
        <field name="fileName"
               column="file_name"
               type="fileName"
               nullable="false"/>

        <field name="originalName"
               column="original_name"
               type="fileOriginalName"
               nullable="false"/>

        <field name="mimeType"
               column="mime_type"
               enum-type="olml89\TelegramUserbot\Backend\File\Domain\MimeType\MimeType"
               length="100"
               nullable="false"/>

        <field name="bytes"
               type="fileSize"
               nullable="false"/>

        <!-- Timestamps -->
        <embedded name="timestamps"
                  class="olml89\TelegramUserbot\Backend\Shared\Domain\ValueObject\Timestamps\Timestamps"
                  use-column-prefix="false"/>

        <!-- Relationships -->
        <many-to-one field="content"
                     target-entity="olml89\TelegramUserbot\Backend\Content\Domain\Content"
                     inversed-by="files"
                     fetch="LAZY">
            <join-column name="content_id"
                         referenced-column-name="id"
                         nullable="true"
                         on-delete="CASCADE"/>
        </many-to-one>

    </entity>

</doctrine-mapping>
