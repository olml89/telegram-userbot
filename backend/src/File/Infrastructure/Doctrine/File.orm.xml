<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="olml89\TelegramUserbot\Backend\File\Domain\File"
            table="files">

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="publicId"
               type="uuid"
               column="public_id"
               unique="true"
               nullable="false"/>

        <field name="name"
               type="string"
               column="name"
               length="50"
               nullable="false"/>

        <field name="originalName"
               type="string"
               column="original_name"
               length="255"
               nullable="false"/>

        <field name="mimeType"
               type="string"
               column="mime_type"
               length="100"
               nullable="false"/>

        <field name="bytes"
               type="bigint"
               column="bytes"
               nullable="false"/>

        <!-- Relationships -->
        <many-to-one field="content"
                     target-entity="olml89\TelegramUserbot\Backend\Content\Domain\Content"
                     inversed-by="files"
                     fetch="LAZY">
            <join-column name="content_id"
                         referenced-column-name="id"
                         nullable="true"
                         on-delete="CASCADE"/>
        </many-to-one>

    </entity>

</doctrine-mapping>
