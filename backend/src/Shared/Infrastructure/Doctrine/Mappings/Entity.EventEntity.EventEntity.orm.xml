<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="olml89\TelegramUserbot\Backend\Shared\Domain\Entity\EventEntity\EventEntity"
            table="events">

        <!-- Identity -->
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="publicId"
               column="public_id"
               type="uuid"
               unique="true"
               nullable="false"/>

        <!-- Fields -->
        <field name="eventClass"
               column="event_class"
               type="string"
               length="255"
               nullable="false"/>

        <field name="entityClass"
               column="entity_class"
               type="string"
               length="255"
               nullable="false"/>

        <field name="entityId"
               column="entity_id"
               type="uuid"
               nullable="false"/>

        <field name="payload"
               type="json"
               nullable="false"/>

        <field name="occurredAt"
               column="occurred_at"
               type="datetime_immutable"
               nullable="false"/>

    </entity>

</doctrine-mapping>
