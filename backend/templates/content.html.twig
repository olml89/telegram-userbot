    {# Modal for Add Content Form #}
    <div id="contentModal" class="modal {% if show_modal %}active{% endif %}">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add New Content</h3>
                <button class="close-modal" id="closeModalBtn" type="button">&times;</button>
            </div>

            {# Flash Messages for ERRORS (inside modal) #}
            {% if app.flashes('error')|length > 0 %}
                <div class="modal-flash-messages">
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-error">
                            ‚ùå {{ message }}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            {{ form_start(form, {
                'action': path('content.upload'),
                'attr': {'id': 'contentForm'}
            }) }}
            <div class="form-group {% if form.name.vars.errors|length > 0 %}has-error{% endif %}">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
                {% if form.name.vars.help %}
                    <small class="form-help">{{ form.name.vars.help }}</small>
                {% endif %}
            </div>

            <div class="form-group {% if form.description.vars.errors|length > 0 %}has-error{% endif %}">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
                {% if form.description.vars.help %}
                    <small class="form-help">{{ form.description.vars.help }}</small>
                {% endif %}
            </div>

            <div class="form-group {% if form.file.vars.errors|length > 0 %}has-error{% endif %}">
                {{ form_label(form.file) }}
                {{ form_widget(form.file) }}
                {{ form_errors(form.file) }}
                {% if form.file.vars.help %}
                    <small class="form-help">{{ form.file.vars.help }}</small>
                {% endif %}
            </div>

            <div class="form-group {% if form.tags.vars.errors|length > 0 %}has-error{% endif %}">
                {{ form_label(form.tags) }}
                {{ form_widget(form.tags) }}
                {{ form_errors(form.tags) }}
                {% if form.tags.vars.help %}
                    <small class="form-help">{{ form.tags.vars.help }}</small>
                {% endif %}
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-secondary" id="cancelBtn">Cancel</button>
                <button type="submit" class="btn btn-primary">
                    <span>üíæ</span> Save Content
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        // Modal functionality
        const modal = document.getElementById('contentModal');
        const openBtn = document.getElementById('openModalBtn');
        const closeBtn = document.getElementById('closeModalBtn');
        const cancelBtn = document.getElementById('cancelBtn');

        // Open modal
        openBtn.addEventListener('click', () => {
            modal.classList.add('active');
        });

        // Close modal
        function closeModal() {
            modal.classList.remove('active');
        }

        closeBtn.addEventListener('click', closeModal);
        cancelBtn.addEventListener('click', closeModal);

        // Close modal when clicking outside
        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                closeModal();
            }
        });

        // Close modal on ESC key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && modal.classList.contains('active')) {
                closeModal();
            }
        });

        // If modal is already open (due to server-side flag), ensure it stays open
        // This handles the case when form validation fails
        {% if show_modal %}
        // Modal is already active via server-side class, no need to do anything
        console.log('Modal opened due to form errors');
        {% endif %}
    </script>
{% endblock %}
