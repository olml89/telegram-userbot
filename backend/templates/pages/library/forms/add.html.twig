<div id="contentAddModal" class="modal {% if show_add_modal %}active{% endif %}">
    <div class="modal-content modal-lg">
        <div class="modal-header">
            <div>
                <h3>Add New Content</h3>
                <p class="modal-subtitle">Create new content and upload files.</p>
            </div>
            <button class="close-modal" type="button" data-add-close aria-label="Close">&times;</button>
        </div>

        <div class="modal-body">
            <div class="modal-section form-grid">
                <label class="form-label full-width">
                    Title
                    <input type="text" class="form-input" placeholder="Enter title..." data-content-title />
                    <div class="field-error" data-error-for="title" hidden></div>
                </label>
                <label class="form-label full-width">
                    Description
                    <textarea class="form-textarea" rows="3" placeholder="Write a short description..." data-content-description></textarea>
                    <div class="field-error" data-error-for="description" hidden></div>
                </label>

                <label class="form-label">
                    Category
                    <div class="custom-select" data-value="Select category" data-content-category>
                        <button type="button" class="select-trigger" aria-haspopup="listbox" aria-expanded="false">
                            <span class="select-value">Select category</span>
                        </button>
                        <div class="select-dropdown" role="listbox">
                            {% for category in categories %}
                                <button
                                        type="button"
                                        class="select-option"
                                        data-option-id="{{ category.publicId }}"
                                        data-option-name="{{ category.name }}"
                                >{{ category.name }}</button>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="field-error" data-error-for="categoryId" hidden></div>
                </label>

                <label class="form-label">
                    Mode
                    <div class="custom-select" data-value="" data-mode-select>
                        <button type="button" class="select-trigger" aria-haspopup="listbox" aria-expanded="false">
                            <span class="select-value">Select mode</span>
                        </button>
                        <div class="select-dropdown" role="listbox">
                            {% for mode in modes %}
                                <button
                                        type="button"
                                        class="select-option"
                                        data-option-value="{{ mode.value }}"
                                        data-option-label="{{ mode.label() }}"
                                >{{ mode.label() }}</button>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="field-error" data-error-for="mode" hidden></div>
                </label>

                <label class="form-label">
                    Price
                    <div class="price-input">
                        <span class="price-prefix">$</span>
                        <input type="number" class="form-input" placeholder="0.00" min="0" data-price-input />
                    </div>
                    <div class="field-error" data-error-for="price" hidden></div>
                </label>

                <label class="form-label">
                    <span class="form-label-title">Intensity (<span data-intensity-value>50</span>)</span>
                    <input type="range" class="form-input" min="0" max="100" value="50" data-intensity-range />
                    <div class="field-error" data-error-for="intensity" hidden></div>
                </label>

                <label class="form-label">
                    Language
                    <div class="custom-select" data-value="" data-content-language>
                        <button type="button" class="select-trigger" aria-haspopup="listbox" aria-expanded="false">
                            <span class="select-value">Select language</span>
                        </button>
                        <div class="select-dropdown" role="listbox">
                            {% for language in languages %}
                                <button
                                        type="button"
                                        class="select-option"
                                        data-option-value="{{ language.value }}"
                                        data-option-label="{{ language.label() }}"
                                >{{ language.label() }}</button>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="field-error" data-error-for="language" hidden></div>
                </label>

                <label class="form-label">
                    Status
                    <div class="custom-select" data-value="" data-content-status>
                        <button type="button" class="select-trigger" aria-haspopup="listbox" aria-expanded="false">
                            <span class="select-value">Select status</span>
                        </button>
                        <div class="select-dropdown" role="listbox">
                            {% for status in statuses %}
                                <button
                                        type="button"
                                        class="select-option"
                                        data-option-value="{{ status.value }}"
                                        data-option-label="{{ status.label() }}"
                                >{{ status.label() }}</button>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="field-error" data-error-for="status" hidden></div>
                </label>
            </div>

            <div class="modal-section">
                <h4>Tags</h4>
                <div class="tag-input">
                    <input
                            type="text"
                            class="form-input"
                            placeholder="Type and press Enter..."
                            data-tags-input
                    />
                    <div class="tag-dropdown" data-tags-dropdown hidden></div>
                </div>

                <div class="tag-group">
                    <div class="tag-group-title">Selected tags</div>
                    <div class="tag-list" data-tags-selected></div>
                    <div class="field-error" data-error-for="tagIds" hidden></div>
                </div>
            </div>

            <div class="modal-section">
                <h4>Files</h4>

                <div class="file-upload-card" data-upload-card>
                    <div class="file-upload-content">
                        <div class="file-upload-icon" aria-hidden="true">
                            <svg viewBox="0 0 24 24" role="img" aria-hidden="true">
                                <path d="M12 3a1 1 0 0 1 1 1v8.59l2.3-2.3a1 1 0 1 1 1.4 1.42l-4.01 4.01a1 1 0 0 1-1.4 0L7.28 11.7a1 1 0 1 1 1.41-1.41L11 12.59V4a1 1 0 0 1 1-1z"/>
                                <path d="M5 14a1 1 0 0 1 1 1v2h12v-2a1 1 0 1 1 2 0v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1z"/>
                            </svg>
                        </div>
                        <div class="file-upload-count" data-upload-count>0 files uploaded</div>
                        <div class="file-upload-subtext">Click browse or drag and drop</div>
                        <div class="file-upload-hint">Images - Videos - Audio - Documents</div>
                        <div class="file-upload-hint">Up to 2 GB per file</div>
                    </div>
                </div>

                <form class="file-list" data-file-list></form>
                <div class="file-total-size" data-total-size>Total size: 0 KB</div>
                <div class="field-error" data-error-for="fileIds" hidden></div>

                <input type="file" class="file-input" data-file-input multiple/>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary btn-hover-outline" data-add-close>Close</button>
            <button type="button" class="btn btn-primary" data-content-add>Add content</button>
        </div>
    </div>
</div>
